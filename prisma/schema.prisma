generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  link     String
  handle   String
  products Product[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  source      String
  description String
  dimensions  String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String   @db.ObjectId
  filter      String
}
